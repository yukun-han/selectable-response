{
  "name": "selectable-response",
  "version": "0.1.0",
  "description": "Customized variant handlers for Mocks Server to return response by selectors.",
  "type": "module",
  "engines": {
    "node": ">= 20"
  },
  "keywords": [
    "Mocks Server",
    "mock",
    "variant handler",
    "plugin"
  ],
  "contributors": [
    "Yukun Han <yukun.han@thoughtworks.com>",
    "Han Chen <han.chen1@thoughtworks.com>"
  ],
  "homepage": "https://github.com/yukun-han/selectable-response",
  "license": "MIT",
  "packageManager": "pnpm@8.15.1",
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.js",
    "default": "./dist/esm/index.js"
  },
  "scripts": {
    "start": "node dist/src/index.js",
    "clean": "rm -rf dist tests/coverage",
    "prebuild": "pnpm run check",
    "build": "pnpm run clean && tsc -p tsconfig.esm.json && tsc -p tsconfig.cjs.json",
    "check": "biome check .",
    "check:fix": "biome check --apply .",
    "test": "jest --coverage",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,mjs,d.mts,jsx,tsx,json,jsonc}": "biome check --apply --no-errors-on-unmatched"
  },
  "devDependencies": {
    "@biomejs/biome": "~1.5.3",
    "@types/jest": "~29.5",
    "@types/jsonpath": "^0.2.4",
    "@types/node": "^20.10.0",
    "husky": "^9.0.10",
    "jest": "~29.7",
    "lint-staged": "^15.2.2",
    "ts-jest": "~29.1",
    "typescript": "~5.2"
  },
  "dependencies": {
    "@mocks-server/core": "^4.0.2",
    "jsonpath": "^1.1.1"
  }
}
